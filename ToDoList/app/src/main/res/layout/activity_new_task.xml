<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTaskActivity"
    android:background="@color/purpleBlue">

    <TextView
        android:id="@+id/course"
        android:layout_width="72dp"
        android:layout_height="25dp"
        android:layout_marginTop="36dp"
        android:text="Course"
        android:textColor="@color/purple"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/theCourse"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/babyBlue"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_arrow_back_24"
                android:gravity="left|center_horizontal"
                android:text=" Add Task"
                android:textColor="@color/purple"
                android:textSize="20dp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/Title"
        android:layout_width="51dp"
        android:layout_height="24dp"
        android:layout_marginTop="40dp"
        android:text="Title"
        android:textColor="@color/purple"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/theTitle"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/theTitle"
        android:layout_width="260dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_task_item"
        android:ems="10"
        android:hint="Write here"
        android:inputType="text"
        android:paddingLeft="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/theCourse"
        android:layout_width="260dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_task_item"
        android:ems="10"
        android:hint="Write here"
        android:inputType="text"
        android:paddingLeft="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/theTitle"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/duedate"
        android:layout_width="94dp"
        android:layout_height="29dp"
        android:layout_marginTop="36dp"
        android:text="Due Date"
        android:textColor="@color/purple"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/theCourse"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course" />

    <EditText
        android:id="@+id/theduedate"
        android:layout_width="260dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_task_item"
        android:ems="10"
        android:hint="Write here"
        android:inputType="text"
        android:paddingLeft="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/theCourse"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/description"
        android:layout_width="104dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="Description"
        android:textColor="@color/purple"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duedate" />

    <EditText
        android:id="@+id/desc"
        android:layout_width="353dp"
        android:layout_height="164dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_task_item"
        android:ems="10"
        android:hint="Write here"
        android:inputType="text"
        android:paddingLeft="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc" />


</androidx.constraintlayout.widget.ConstraintLayout>